{# Navbar #}
<div id="navbar" class="d-block d-sm-none">
    <div id="nav-btn" role="button" aria-labelledby="navbar-label">
        <div class="nav-btn-bar" id="nav-btn-bar-1"></div>
        <div class="nav-btn-bar" id="nav-btn-bar-2"></div>
        <div class="nav-btn-bar" id="nav-btn-bar-3"></div>
    </div>
    <div id="navbar-label">Menu</div>
</div>
<div id="nav-overlay"></div>

{# Main nav #}
<nav id="nav" data-active-node="{{ node.id }}" class="navbar navbar-toggleable-md navbar-light bg-faded">
    <div id="nav-container" class="container">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul id="nav-list" class="nav navbar-nav mr-auto" role="menubar">
                {# Home #}
                {% if home %}
                    {% set homeSource = home.nodeSources.first %}
                    <li class="nav-item nav-item-home {% if node.isHome %}active{% endif %}" id="nav-item-home" role="none">
                        <a href="{{ path(homeSource) }}"
                           role="menuitem"
                           class="nav-link-home nav-link {% if node.isHome %}active{% endif %}"
                           id="nav-home">{{ homeSource.title|default(home.nodeName) }}</a>
                    </li>
                {% endif %}

                {% if themeServices.navigation and themeServices.navigation|length %}
                    {% for source in themeServices.navigation %}
                        {% include '@BaseTheme/common/nav-item.html.twig' with {
                            'source' : source,
                            'active' : node,
                            'home' : home,
                            'themeServices':themeServices
                        } only %}
                    {% endfor %}
                {% endif %}
            </ul>

            {% if translation %}
                <ul id="nav-lang" class="nav navbar-nav" role="menubar">
                    {% for id, trans in translation|menu %}
                        <li class="nav-item nav-item-lang{% if trans.active %} active{% endif %}" role="none">
                            <a class="no-ajax-link nav-link nav-link-lang{% if trans.active %} active{% endif %}"
                               role="menuitem"
                               href="{{ trans.url }}">{{ trans.translation }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</nav>
