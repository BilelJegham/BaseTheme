{% set blockClassPrefix = nodeType.name|lower %}

{% set blockClasses = [
    'page-block',
    blockClassPrefix
] %}

<div class="{{ blockClasses|join(' ') }}"
     id="block-{{ node.nodeName }}"
     data-index="{{ loop.index0 }}"
     data-node-type="{{ nodeType.name|lower }}">

    <div class="container">
        <h2 class="page-block-title {{ blockClassPrefix }}-title">{{ nodeSource.title }}</h2>
        <div class="page-block-content {{ blockClassPrefix }}-content">
            {{ nodeSource.content|markdown }}
        </div>
    </div>
</div>
