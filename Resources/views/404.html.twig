{% extends head.ajax ? '@BaseTheme/base.ajax.twig' : '@BaseTheme/base.html.twig' %}

{% set classes = [
    'page-content',
] %}
{% if node.home %}
{% set classes = classes|merge(['home-content']) %}
{% endif %}
{% if head.ajax %}
{% set classes = classes|merge(['page-content-ajax']) %}
{% endif %}

{% block body_attributes %}class="error error-404" id="error-404"{% endblock %}

{% block content %}
<section class="{{ classes|join(' ') }}"
         id="page-content-404"
         data-title="{{ nodeSource.title }}"
         data-node-type="{{ node.nodeType.name|lower }}"
         data-meta-title="{{ pageMeta.title }}">
    <h1>{% trans %}error404.title{% endtrans %}</h1>
    <h2>{% trans %}error404.message{% endtrans %}</h2>
    {% if head.devMode %}{{ errorMessage }}{% endif %}
</section>
{% endblock %}
