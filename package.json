{
  "name": "BaseTheme",
  "description": "Blank Roadiz theme - This theme is meant to get a fresh start to create a theme.",
  "author": {
    "name": "Rezo Zero",
    "url": "https://www.rezo-zero.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roadiz/BaseTheme"
  },
  "bugs": {
    "url": "https://github.com/roadiz/BaseTheme/issues"
  },
  "engines": {
    "node": ">=4.2.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "add-force": "git add --force static/css/* static/fonts/* static/img/* static/js/* static/vendors/* Resources/views/svg/sprite.svg.twig Resources/views/partials/css-inject.html.twig Resources/views/partials/js-inject.html.twig",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "better-npm-run dev",
    "dev-livereload": "better-npm-run dev-livereload",
    "build": "better-npm-run build",
    "watch-svg": "gulp watch-svg --silent",
    "build-svg": "gulp build-svg --silent"
  },
  "betterScripts": {
    "dev": {
      "command": "npm run build-svg && concurrently -r \"npm run watch-svg\" \"webpack\"",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "Roadiz-front:*",
        "REFRESH_ON_CHANGE": false
      }
    },
    "dev-livereload": {
      "command": "npm run build-svg && concurrently -r \"npm run watch-svg\" \"webpack-dev-server\"",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "Roadiz-front:*",
        "REFRESH_ON_CHANGE": true
      }
    },
    "build": {
      "command": "npm run build-svg && webpack",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "Roadiz-front:*"
      }
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-es2015-modules-amd": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.20.0",
    "better-npm-run": "^0.1.0",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.2",
    "css-mqpacker": "^6.0.0",
    "cssnano": "^3.7.7",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-rename": "^1.2.2",
    "gulp-svgmin": "^1.2.4",
    "gulp-svgstore": "^6.1.0",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.29.0",
    "ip": "^1.1.5",
    "node-sass": "^4.5.3",
    "postcss-filter-gradient": "^1.0.0",
    "postcss-fixes": "^2.0.1",
    "postcss-loader": "^2.0.6",
    "postcss-reduce-transforms": "^1.0.3",
    "require-dir": "^0.3.0",
    "resolve-url-loader": "^2.0.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0",
    "webpack-stream": "^4.0.0"
  },
  "dependencies": {
    "bootstrap": "4.0.0-beta.2",
    "es6-promise": "^4.1.1",
    "gsap": "^1.20.3",
    "ismobilejs": "^0.4.1",
    "jquery": "^3.2.1",
    "jquery.waitforimages": "^2.2.0",
    "load-google-maps-api": "^1.0.0",
    "loglevel": "^1.4.1",
    "starting-blocks": "^3.0.0-alpha.11",
    "vanilla-lazyload": "^10.3.5"
  }
}
